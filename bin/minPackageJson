#!/usr/bin/env node
var fs = require('fs');
var path = require('path');

const packageJson = JSON.parse(
  fs.readFileSync(
    path.resolve( __dirname, '../package.json')
  )
);
packageJson.main = packageJson.main.replace(/^dist\//, '');
const replacer = ['name', 'version', 'main', 'publishConfig', 'registry'];
fs.writeFileSync(path.resolve('dist/', 'package.json'), JSON.stringify(packageJson, replacer, 2));
